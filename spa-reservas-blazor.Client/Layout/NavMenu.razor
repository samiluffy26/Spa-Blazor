@using Microsoft.AspNetCore.Components.Routing

@if (Mobile)
{
    @* Navigation mobile (vertical) *@
    <nav class="space-y-2">
        <NavLink href="" Match="NavLinkMatch.All" class="@MobileLinkClass" @onclick="OnClickCallback">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-home"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
            <span>Inicio</span>
        </NavLink>
        
        <NavLink href="services" class="@MobileLinkClass" @onclick="OnClickCallback">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sparkles"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/></svg>
            <span>Servicios</span>
        </NavLink>
        
        <NavLink href="booking" class="@MobileLinkClass" @onclick="OnClickCallback">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            <span>Reservar</span>
        </NavLink>
        
        <NavLink href="my-bookings" class="@MobileLinkClass" @onclick="OnClickCallback">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
            <span>Mis Reservas</span>
        </NavLink>
        
        <NavLink href="contact" class="@MobileLinkClass" @onclick="OnClickCallback">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            <span>Contacto</span>
        </NavLink>
    </nav>
}
else
{
    @* Navigation desktop (horizontal) *@
    <nav class="flex items-center gap-2">
        <NavLink href="" Match="NavLinkMatch.All" class="@DesktopLinkClass">Inicio</NavLink>
        <NavLink href="services" class="@DesktopLinkClass">Servicios</NavLink>
        <NavLink href="booking" class="@DesktopLinkClass">Reservar</NavLink>
        <NavLink href="my-bookings" class="@DesktopLinkClass">Mis Reservas</NavLink>
        <NavLink href="contact" class="@DesktopLinkClass">Contacto</NavLink>
    </nav>
}

@code {
    [Parameter]
    public bool Mobile { get; set; } = false;

    [Parameter]
    public EventCallback OnClickCallback { get; set; }

    private string DesktopLinkClass => "px-4 py-2 rounded-full font-medium transition-all duration-200 text-gray-700 hover:bg-gray-50 hover:text-primary-600 [&.active]:bg-primary-50 [&.active]:text-primary-700";

    private string MobileLinkClass => "flex items-center gap-4 px-4 py-3 rounded-xl font-medium transition-all duration-200 text-gray-700 hover:bg-gray-50 [&.active]:bg-primary-50 [&.active]:text-primary-700";
}
