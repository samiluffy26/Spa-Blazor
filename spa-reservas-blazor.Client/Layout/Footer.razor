@inject NavigationManager Navigation

<footer class="bg-sage-900 text-white">
    @* Main Footer *@
    <div class="container-custom py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
            
            @* Column 1: About *@
            <div>
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-sage-600 rounded-2xl flex items-center justify-center">
                        <span class="text-2xl font-serif font-bold text-white">R</span>
                    </div>
                    <div>
                        <h3 class="text-xl font-serif font-bold">
                            Relax<span class="text-primary-400">Spa</span>
                        </h3>
                    </div>
                </div>
                <p class="text-sage-300 leading-relaxed mb-6">
                    Tu oasis de tranquilidad y bienestar. Tratamientos personalizados 
                    para renovar cuerpo, mente y espíritu.
                </p>
                
                @* Social Media *@
                <div class="flex gap-3">
                    <a href="https://facebook.com" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-sage-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition-colors" aria-label="Facebook">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-facebook"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
                    </a>
                    <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-sage-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition-colors" aria-label="Instagram">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
                    </a>
                    <a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-sage-800 rounded-full flex items-center justify-center hover:bg-primary-600 transition-colors" aria-label="Twitter">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-twitter"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>
                    </a>
                </div>
            </div>

            @* Column 2: Quick Links *@
            <div>
                <h4 class="text-lg font-serif font-semibold mb-6">
                    Enlaces Rápidos
                </h4>
                <ul class="space-y-3">
                    <li>
                        <NavLink href="" class="text-sage-300 hover:text-white transition-colors flex items-center gap-2">
                            <span>→</span> Inicio
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="services" class="text-sage-300 hover:text-white transition-colors flex items-center gap-2">
                            <span>→</span> Nuestros Servicios
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="booking" class="text-sage-300 hover:text-white transition-colors flex items-center gap-2">
                            <span>→</span> Reservar Cita
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="my-bookings" class="text-sage-300 hover:text-white transition-colors flex items-center gap-2">
                            <span>→</span> Mis Reservas
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="contact" class="text-sage-300 hover:text-white transition-colors flex items-center gap-2">
                            <span>→</span> Contacto
                        </NavLink>
                    </li>
                </ul>
            </div>

            @* Column 3: Contact Info *@
            <div>
                <h4 class="text-lg font-serif font-semibold mb-6">
                    Contacto
                </h4>
                <ul class="space-y-4">
                    <li class="flex items-start gap-3 text-sage-300">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin mt-1 text-primary-400 flex-shrink-0"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                        <span>
                            Av. Winston Churchill #123<br />
                            Santo Domingo, República Dominicana
                        </span>
                    </li>
                    <li>
                        <a href="tel:+18095551234" class="flex items-center gap-3 text-sage-300 hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone text-primary-400"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                            <span>(809) 555-1234</span>
                        </a>
                    </li>
                    <li>
                        <a href="mailto:info@relaxspa.com" class="flex items-center gap-3 text-sage-300 hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail text-primary-400"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                            <span>info@relaxspa.com</span>
                        </a>
                    </li>
                </ul>
            </div>

            @* Column 4: Hours & Features *@
            <div>
                <h4 class="text-lg font-serif font-semibold mb-6">
                    Horarios
                </h4>
                <ul class="space-y-3 text-sage-300 mb-6">
                    <li class="flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock text-primary-400"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                        <div>
                            <p class="font-medium text-white">Lun - Vie</p>
                            <p class="text-sm">9:00 AM - 7:00 PM</p>
                        </div>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock text-primary-400"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                        <div>
                            <p class="font-medium text-white">Sábados</p>
                            <p class="text-sm">10:00 AM - 6:00 PM</p>
                        </div>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock text-primary-400"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                        <div>
                            <p class="font-medium text-white">Domingos</p>
                            <p class="text-sm">Cerrado</p>
                        </div>
                    </li>
                </ul>

                @* Features *@
                <div class="space-y-2">
                    <div class="flex items-center gap-2 text-sage-300 text-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-award text-primary-400"><circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/></svg>
                        <span>Terapeutas certificados</span>
                    </div>
                    <div class="flex items-center gap-2 text-sage-300 text-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart text-primary-400"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
                        <span>Productos naturales</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    @* Bottom Bar *@
    <div class="border-t border-sage-800">
        <div class="container-custom py-6">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-sage-400">
                <p>
                    © @DateTime.Now.Year RelaxSpa. Todos los derechos reservados.
                </p>
                <div class="flex gap-6">
                    <NavLink href="privacy" class="hover:text-white transition-colors">
                        Privacidad
                    </NavLink>
                    <NavLink href="terms" class="hover:text-white transition-colors">
                        Términos
                    </NavLink>
                    <NavLink href="cookies" class="hover:text-white transition-colors">
                        Cookies
                    </NavLink>
                </div>
            </div>
        </div>
    </div>
</footer>

