@page "/register"
@using spa_reservas_blazor.Shared.DTOs
@using spa_reservas_blazor.Client.Auth
@inject IAuthService AuthService
@inject NavigationManager Navigation

<div class="min-h-screen bg-sage-50 flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-serif font-bold text-gray-900">Crear Cuenta</h2>
            <p class="text-gray-500 mt-2">Únete a RelaxSpa para reservar fácilmente</p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="bg-red-50 text-red-600 p-3 rounded-lg mb-4 text-sm">
                @ErrorMessage
            </div>
        }

        <EditForm Model="RegisterModel" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nombre Completo</label>
                    <InputText @bind-Value="RegisterModel.Name" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" placeholder="Tu Nombre" />
                    <ValidationMessage For="@(() => RegisterModel.Name)" class="text-red-500 text-xs mt-1" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <InputText @bind-Value="RegisterModel.Email" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" placeholder="tu@email.com" />
                    <ValidationMessage For="@(() => RegisterModel.Email)" class="text-red-500 text-xs mt-1" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                    <InputText @bind-Value="RegisterModel.Password" type="password" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" placeholder="Mínimo 6 caracteres" />
                    <ValidationMessage For="@(() => RegisterModel.Password)" class="text-red-500 text-xs mt-1" />
                </div>

                <button type="submit" class="w-full bg-primary-600 text-white py-2 rounded-lg hover:bg-primary-700 font-medium transition-colors shadow-md">
                    Registrarse
                </button>
            </div>
        </EditForm>

        <div class="mt-6 text-center text-sm text-gray-500">
            ¿Ya tienes cuenta? <a href="login" class="text-primary-600 font-medium hover:underline">Inicia Sesión</a>
        </div>
         <div class="mt-4 text-center">
             <a href="/" class="text-gray-400 hover:text-gray-600 text-xs">Volver al inicio</a>
        </div>
    </div>
</div>

@code {
    private RegisterRequest RegisterModel = new();
    private string ErrorMessage = string.Empty;

    private async Task HandleRegister()
    {
        try
        {
            await AuthService.Register(RegisterModel);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            ErrorMessage = "Error al registrarse. Intenta con otro email.";
            Console.WriteLine(ex.Message);
        }
    }
}
