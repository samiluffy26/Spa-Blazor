@page "/login"
@using spa_reservas_blazor.Shared.DTOs
@using spa_reservas_blazor.Client.Auth
@inject IAuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveWebAssembly

<div class="min-h-screen bg-sage-50 flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-serif font-bold text-gray-900">Bienvenido de nuevo</h2>
            <p class="text-gray-500 mt-2">Ingresa a tu cuenta para gestionar tus reservas</p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="bg-red-50 text-red-600 p-3 rounded-lg mb-4 text-sm">
                @ErrorMessage
            </div>
        }

        <EditForm Model="LoginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <InputText @bind-Value="LoginModel.Email" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" placeholder="tu@email.com" />
                    <ValidationMessage For="@(() => LoginModel.Email)" class="text-red-500 text-xs mt-1" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                    <InputText @bind-Value="LoginModel.Password" type="password" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" placeholder="••••••••" />
                    <ValidationMessage For="@(() => LoginModel.Password)" class="text-red-500 text-xs mt-1" />
                </div>

                <button type="submit" class="w-full bg-primary-600 text-white py-2 rounded-lg hover:bg-primary-700 font-medium transition-colors shadow-md">
                    Iniciar Sesión
                </button>
            </div>
        </EditForm>

        <div class="mt-6 text-center text-sm text-gray-500">
            ¿No tienes cuenta? <a href="register" class="text-primary-600 font-medium hover:underline">Regístrate aquí</a>
        </div>
        
        <div class="mt-4 text-center">
             <a href="/" class="text-gray-400 hover:text-gray-600 text-xs">Volver al inicio</a>
        </div>
    </div>
</div>

@code {
    private LoginRequest LoginModel = new();
    private string ErrorMessage = string.Empty;

    private async Task HandleLogin()
    {
        try
        {
            await AuthService.Login(LoginModel);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            ErrorMessage = "Email o contraseña incorrectos.";
            Console.WriteLine(ex.Message);
        }
    }
}
