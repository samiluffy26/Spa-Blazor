@page "/my-bookings"
@using spa_reservas_blazor.Shared.Entities
@using spa_reservas_blazor.Services
@using Microsoft.AspNetCore.Components.Authorization
@using spa_reservas_blazor.Client.Components.Shared
@inject IBookingService _bookingService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<AuthorizeView>
    <Authorized>
        <div class="container-custom py-12">
            <div class="mb-8 flex justify-between items-center">
                <div>
                    <h1 class="text-3xl font-serif font-bold text-gray-900">Mis Reservas</h1>
                    <p class="text-gray-600 mt-1">Gestiona tus citas y revisa tu historial de bienestar.</p>
                </div>
                <a href="booking" class="btn-primary px-6 py-2 rounded-xl text-sm font-medium shadow-md hover:shadow-lg transition-all">
                    Nueva Reserva
                </a>
            </div>

            @if (isLoading)
            {
                <div class="flex flex-col items-center justify-center p-20">
                    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mb-4"></div>
                    <p class="text-gray-500 font-medium">Cargando tus reservas...</p>
                </div>
            }
            else if (myBookings.Count == 0)
            {
                <div class="bg-white rounded-3xl shadow-xl p-12 text-center border border-gray-100 max-w-2xl mx-auto">
                    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-sage-50 mb-6 text-sage-400">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-x"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/><path d="m14 14-4 4"/><path d="m10 14 4 4"/></svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">No tienes reservas activas</h3>
                    <p class="text-gray-500 mb-8 max-w-sm mx-auto">Parece que no has agendado ninguna cita todavía. ¡Regálate un momento de relax hoy!</p>
                    <a href="booking" class="inline-flex items-center gap-2 px-8 py-3 bg-primary-600 text-white rounded-xl hover:bg-primary-700 transition-all font-medium shadow-lg hover:shadow-xl">
                        Agendar mi primera cita
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </a>
                </div>
            }
            else
            {
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var booking in myBookings.OrderByDescending(b => b.Date).ThenByDescending(b => b.Time))
                    {
                        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
                            <div class="p-5 border-b border-gray-50 flex justify-between items-start">
                                <div class="bg-primary-50 text-primary-700 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider">
                                    @booking.Status
                                </div>
                                <span class="text-xs text-gray-400 font-mono">ID: @booking.Id.Substring(0, 8)</span>
                            </div>
                            
                            <div class="p-6">
                                <h3 class="text-lg font-bold text-gray-900 mb-1">@booking.ServiceName</h3>
                                <p class="text-sm text-gray-500 mb-4 flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                                    @booking.ServiceDuration min
                                </p>

                                <div class="space-y-3 mb-6">
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg bg-gray-50 flex items-center justify-center text-gray-400">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                                        </div>
                                        <div class="text-sm">
                                            <p class="font-medium text-gray-900">@booking.Date.ToString("D")</p>
                                            <p class="text-gray-500 text-xs">Fecha agendada</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg bg-gray-50 flex items-center justify-center text-gray-400">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ticket"><path d="M22 17a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V9.5C2 7 4 5 6.5 5H18c2.5 0 4 2 4 4.5V17Z"/><path d="M6 5v14"/><path d="M18 5v14"/><path d="M11 11h2"/><path d="M11 15h2"/></svg>
                                        </div>
                                        <div class="text-sm">
                                            <p class="font-medium text-gray-900">@booking.Time.ToString("hh:mm tt")</p>
                                            <p class="text-gray-500 text-xs">Hora confirmada</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="flex justify-between items-center pt-4 border-t border-gray-50">
                                    <span class="text-2xl font-bold text-gray-900">$@booking.ServicePrice</span>
                                    @if (booking.Status != BookingStatus.Cancelled && booking.Date >= DateOnly.FromDateTime(DateTime.Today))
                                    {
                                        <button @onclick="() => CancelBooking(booking.Id)" class="text-sm text-red-500 hover:text-red-700 font-medium transition-colors">
                                            Cancelar
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="min-h-[60vh] flex flex-col items-center justify-center p-12 text-center">
            <div class="w-20 h-20 bg-primary-50 rounded-full flex items-center justify-center text-primary-600 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-lock"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Inicia sesión para ver tus reservas</h2>
            <p class="text-gray-500 mb-8 max-w-sm">Necesitas una cuenta para poder acceder al historial de tus citas y gestionar tus servicios.</p>
            <a href="login" class="px-8 py-3 bg-primary-600 text-white rounded-xl font-medium shadow-lg hover:bg-primary-700 transition-all">
                Iniciar Sesión
            </a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<Booking> myBookings = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadMyBookings();
    }

    private async Task LoadMyBookings()
    {
        isLoading = true;
        try 
        {
            myBookings = await _bookingService.GetMyBookingsAsync();
        }
        catch (Exception ex)
        {
            // Silently handle or log if needed, the service already logs
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CancelBooking(string id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", " ¿Estás seguro de que deseas cancelar esta reserva?");
        if (confirmed)
        {
            await _bookingService.CancelBookingAsync(id);
            await LoadMyBookings(); // Refresh list
        }
    }
}
