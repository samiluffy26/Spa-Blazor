@page "/admin/settings"
@using spa_reservas_blazor.Shared.Entities
@using spa_reservas_blazor.Services
@inject IBookingService BookingService
@layout Layout.AdminLayout
@rendermode InteractiveAuto

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Ajustes Generales</h2>
        <p class="text-gray-500">Configura el horario y capacidad de tu spa.</p>
    </div>

    <EditForm Model="Settings" OnValidSubmit="HandleSubmit">
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 space-y-8">
            
            @* Horario *@
            <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    Horario de Atención
                </h3>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Apertura</label>
                        <input type="time" @bind="OpeningTime" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" />
                    </div>
                    <div>
                         <label class="block text-sm font-medium text-gray-700 mb-1">Cierre</label>
                        <input type="time" @bind="ClosingTime" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" />
                    </div>
                </div>
            </div>

            <hr class="border-gray-100" />

            @* Capacidad *@
            <div>
                 <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    Capacidad
                </h3>
                 <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Máximo de Reservas Diarias</label>
                    <InputNumber @bind-Value="Settings.MaxDailyBookings" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500" />
                    <p class="text-sm text-gray-500 mt-1">Límite total de reservas permitidas por día independientemente del servicio.</p>
                 </div>
            </div>

            <div class="pt-6 border-t border-gray-100 flex justify-end">
                <button type="submit" class="bg-primary-600 text-white px-8 py-2 rounded-lg hover:bg-primary-700 shadow-md font-medium transition-colors">
                    Guardar Configuración
                </button>
            </div>
        </div>
    </EditForm>
</div>

@code {
    private AppSettings Settings = new();
    
    // Bindings temporales para input type="time" que usa DateTime/TimeSpan strings
    private DateTime OpeningTime { 
        get => DateTime.Today.Add(Settings.OpeningTime); 
        set => Settings.OpeningTime = value.TimeOfDay; 
    }
    
    private DateTime ClosingTime { 
        get => DateTime.Today.Add(Settings.ClosingTime); 
        set => Settings.ClosingTime = value.TimeOfDay; 
    }


    protected override async Task OnInitializedAsync()
    {
        Settings = await BookingService.GetSettingsAsync();
    }

    private async Task HandleSubmit()
    {
        await BookingService.UpdateSettingsAsync(Settings);
        // Mostrar notificación de éxito (pendiente implementar toast)
    }
}
