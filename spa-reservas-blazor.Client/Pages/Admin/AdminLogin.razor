@page "/admin/login"
@using spa_reservas_blazor.Shared.DTOs
@using spa_reservas_blazor.Client.Auth
@inject IAuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveWebAssembly
@layout Layout.MainLayout 

<div class="min-h-screen bg-gray-900 flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-white rounded-xl shadow-2xl p-8 border-t-4 border-primary-500">
        <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-gray-900">Acceso Administrativo</h2>
            <p class="text-gray-500 mt-2">Solo personal autorizado</p>
        </div>

        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <div class="bg-red-50 text-red-600 p-3 rounded-lg mb-4 text-sm border border-red-100">
                @ErrorMessage
            </div>
        }

        <EditForm Model="LoginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
            
            <div class="space-y-5">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Email Corporativo</label>
                    <InputText @bind-Value="LoginModel.Email" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500 bg-gray-50" placeholder="admin@relaxspa.com" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                    <InputText @bind-Value="LoginModel.Password" type="password" class="w-full rounded-lg border-gray-300 focus:border-primary-500 focus:ring-primary-500 bg-gray-50" placeholder="••••••••" />
                </div>

                <button type="submit" class="w-full bg-gray-800 text-white py-3 rounded-lg hover:bg-gray-700 font-bold transition-colors shadow-lg mt-2">
                    Ingresar al Panel
                </button>
            </div>
        </EditForm>
        
        <div class="mt-6 text-center">
             <a href="/" class="text-gray-400 hover:text-gray-600 text-sm">Volver al sitio público</a>
        </div>
    </div>
</div>

@code {
    private LoginRequest LoginModel = new();
    private string ErrorMessage = string.Empty;

    private async Task HandleLogin()
    {
        try
        {
            var response = await AuthService.Login(LoginModel);
            if (response.Role == "Admin")
            {
                Navigation.NavigateTo("/admin/dashboard");
            }
            else
            {
                ErrorMessage = "No tienes permisos de administrador.";
                await AuthService.Logout();
            }
        }
        catch (Exception)
        {
            ErrorMessage = "Credenciales inválidas.";
        }
    }
}
