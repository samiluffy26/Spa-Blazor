@page "/"
@using spa_reservas_blazor.Shared.Entities
@using spa_reservas_blazor.Services
@using spa_reservas_blazor.Components.Shared
@inject IBookingService BookingService

<PageTitle>RelaxSpa - Tu oasis de tranquilidad</PageTitle>

<div class="min-h-screen">
    
    @* HERO SECTION *@
    <section class="relative bg-gradient-to-br from-sage-50 via-primary-50 to-white py-20 overflow-hidden">
        <div class="container-custom">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                
                @* Texto *@
                <div class="space-y-8 animate-fadeIn">
                    <div class="inline-block">
                        <span class="px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                            ✨ Tu oasis de tranquilidad
                        </span>
                    </div>
                    
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-serif font-bold text-gray-900 leading-tight">
                        Renueva tu
                        <span class="block text-primary-600">cuerpo y mente</span>
                    </h1>
                    
                    <p class="text-xl text-gray-600 leading-relaxed max-w-xl">
                        Experimenta la perfecta armonía entre bienestar y relajación. 
                        Tratamientos personalizados con productos naturales de primera calidad.
                    </p>

                    @* CTAs *@
                    <div class="flex flex-col sm:flex-row gap-4">
                        <NavLink href="booking">
                            <button class="btn-primary flex items-center justify-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
                                Reserva tu cita
                            </button>
                        </NavLink>
                        <NavLink href="services">
                            <button class="btn-secondary flex items-center justify-center gap-2 border border-sage-200">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sparkles"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/></svg>
                                Ver servicios
                            </button>
                        </NavLink>
                    </div>

                    @* Stats *@
                    <div class="grid grid-cols-3 gap-6 pt-8 border-t border-gray-200">
                        <div>
                            <p class="text-3xl font-bold text-primary-700">500+</p>
                            <p class="text-sm text-gray-600">Clientes felices</p>
                        </div>
                        <div>
                            <p class="text-3xl font-bold text-primary-700">15+</p>
                            <p class="text-sm text-gray-600">Tratamientos</p>
                        </div>
                        <div>
                            <p class="text-3xl font-bold text-primary-700">4.9★</p>
                            <p class="text-sm text-gray-600">Valoración</p>
                        </div>
                    </div>
                </div>

                @* Imagen/Visual *@
                <div class="relative animate-slideUp">
                    <div class="relative rounded-3xl overflow-hidden shadow-2xl">
                        <div class="aspect-[4/5] bg-gray-200">
                            <img src="https://images.unsplash.com/photo-1540555700478-4be289fbecef?q=80&w=800&auto=format&fit=crop" 
                                 alt="Relax Spa Atmosphere" 
                                 class="w-full h-full object-cover" />
                        </div>
                        
                        @* Floating card *@
                        <div class="absolute bottom-8 left-8 right-8 bg-white/95 backdrop-blur-md rounded-2xl p-6 shadow-xl">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart text-primary-600"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-900">Promoción especial</p>
                                    <p class="text-sm text-gray-600">20% de descuento en tu primera visita</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* SERVICIOS POPULARES *@
    <section class="py-20 bg-white">
        <div class="container-custom">
            <div class="text-center mb-12">
                <span class="inline-block px-4 py-2 bg-sage-100 text-sage-700 rounded-full text-sm font-medium mb-4">
                    Nuestros servicios
                </span>
                <h2 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
                    Tratamientos más solicitados
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Descubre nuestros servicios más populares, diseñados para tu máximo bienestar
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
                @foreach (var service in PopularServices)
                {
                    <ServiceCard Service="service" />
                }
            </div>

            <div class="text-center">
                <NavLink href="services">
                    <button class="btn-secondary border border-sage-200">
                        Ver todos los servicios
                    </button>
                </NavLink>
            </div>
        </div>
    </section>

    @* BENEFICIOS *@
    <section class="py-20 bg-sage-50">
        <div class="container-custom">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
                    Por qué elegirnos
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Comprometidos con tu bienestar y satisfacción
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                @* Beneficio 1 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 text-center p-8">
                    <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star text-primary-600"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                    </div>
                    <h3 class="font-serif font-semibold text-xl text-gray-900 mb-3">
                        Terapeutas Certificados
                    </h3>
                    <p class="text-gray-600">
                        Profesionales altamente capacitados con años de experiencia
                    </p>
                </div>

                @* Beneficio 2 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 text-center p-8">
                    <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-heart text-primary-600"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
                    </div>
                    <h3 class="font-serif font-semibold text-xl text-gray-900 mb-3">
                        Productos Naturales
                    </h3>
                    <p class="text-gray-600">
                        Solo utilizamos productos orgánicos de la más alta calidad
                    </p>
                </div>

                @* Beneficio 3 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 text-center p-8">
                    <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock text-primary-600"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    </div>
                    <h3 class="font-serif font-semibold text-xl text-gray-900 mb-3">
                        Horarios Flexibles
                    </h3>
                    <p class="text-gray-600">
                        Reserva en el horario que mejor se adapte a ti
                    </p>
                </div>

                @* Beneficio 4 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 text-center p-8">
                    <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trending-up text-primary-600"><polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/><polyline points="16 7 22 7 22 13"/></svg>
                    </div>
                    <h3 class="font-serif font-semibold text-xl text-gray-900 mb-3">
                        Resultados Garantizados
                    </h3>
                    <p class="text-gray-600">
                        Tratamientos efectivos respaldados por la satisfacción de nuestros clientes
                    </p>
                </div>
            </div>
        </div>
    </section>

    @* TESTIMONIOS *@
    <section class="py-20 bg-white">
        <div class="container-custom">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-4">
                    Lo que dicen nuestros clientes
                </h2>
                <p class="text-lg text-gray-600">
                    Testimonios reales de personas que transformaron su bienestar
                </p>
            </div>

            <div class="grid md:grid-cols-3 gap-8">
                @* Testimonio 1 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 p-8">
                    <div class="flex gap-1 mb-4">
                        @for (int i = 0; i < 5; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star text-yellow-400 fill-yellow-400"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        }
                    </div>
                    <p class="text-gray-700 mb-6 leading-relaxed">
                        "Una experiencia increíble. El masaje de piedras calientes fue exactamente 
                        lo que necesitaba. Salí completamente renovada."
                    </p>
                    <div class="flex items-center gap-3">
                        <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?q=80&w=200&auto=format&fit=crop" alt="María González" class="w-12 h-12 rounded-full object-cover" />
                        <div>
                            <p class="font-semibold text-gray-900">María González</p>
                            <p class="text-sm text-gray-500">Cliente frecuente</p>
                        </div>
                    </div>
                </div>

                @* Testimonio 2 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 p-8">
                    <div class="flex gap-1 mb-4">
                        @for (int i = 0; i < 5; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star text-yellow-400 fill-yellow-400"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        }
                    </div>
                    <p class="text-gray-700 mb-6 leading-relaxed">
                        "El personal es muy profesional y el ambiente del spa es simplemente perfecto. 
                        Definitivamente volveré."
                    </p>
                    <div class="flex items-center gap-3">
                        <img src="https://images.unsplash.com/photo-1500648767791-00dcc994a43e?q=80&w=200&auto=format&fit=crop" alt="Carlos Rodríguez" class="w-12 h-12 rounded-full object-cover" />
                        <div>
                            <p class="font-semibold text-gray-900">Carlos Rodríguez</p>
                            <p class="text-sm text-gray-500">Cliente nuevo</p>
                        </div>
                    </div>
                </div>

                @* Testimonio 3 *@
                <div class="bg-white rounded-3xl shadow-sm hover:shadow-lg transition-all duration-300 p-8">
                    <div class="flex gap-1 mb-4">
                        @for (int i = 0; i < 5; i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star text-yellow-400 fill-yellow-400"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                        }
                    </div>
                    <p class="text-gray-700 mb-6 leading-relaxed">
                        "Los tratamientos faciales son maravillosos. Mi piel nunca se ha visto mejor. 
                        ¡Altamente recomendado!"
                    </p>
                    <div class="flex items-center gap-3">
                        <img src="https://images.unsplash.com/photo-1544005313-94ddf0286df2?q=80&w=200&auto=format&fit=crop" alt="Ana Sánchez" class="w-12 h-12 rounded-full object-cover" />
                        <div>
                            <p class="font-semibold text-gray-900">Ana Sánchez</p>
                            <p class="text-sm text-gray-500">Cliente VIP</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* CTA FINAL *@
    <section class="py-20 bg-gradient-to-br from-primary-600 to-sage-700 text-white">
        <div class="container-custom text-center">
            <h2 class="text-4xl md:text-5xl font-serif font-bold mb-6">
                ¿Listo para tu experiencia de bienestar?
            </h2>
            <p class="text-xl text-primary-100 mb-8 max-w-2xl mx-auto">
                Reserva tu cita hoy y comienza tu viaje hacia el equilibrio perfecto 
                de cuerpo, mente y espíritu.
            </p>
            <NavLink href="booking">
                <button class="btn-secondary bg-white text-primary-700 hover:bg-primary-50">
                    Reservar ahora
                </button>
            </NavLink>
        </div>
    </section>

</div>

@code {
    private List<Service> PopularServices = new();

    protected override void OnInitialized()
    {
        var allServices = BookingService.GetServices();
        // IDs: 1 (Relajante), 2 (Facial), 8 (Hidroterapia)
        PopularServices = allServices.Where(s => s.Id == "1" || s.Id == "2" || s.Id == "8").ToList();
    }
}
