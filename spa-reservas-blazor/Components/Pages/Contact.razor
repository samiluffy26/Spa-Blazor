@page "/contact"

<PageTitle>Contacto - RelaxSpa</PageTitle>

<div class="min-h-screen bg-sage-50 py-12">
    <div class="container-custom">
        
        <div class="text-center mb-16 animate-fadeIn">
            <h1 class="text-4xl md:text-5xl font-serif font-bold text-gray-900 mb-6">
                Contáctanos
            </h1>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Estamos aquí para responder tus preguntas y ayudarte a planificar tu experiencia de bienestar.
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
            
            @* Información de Contacto *@
            <div class="bg-sage-900 text-white rounded-3xl p-10 shadow-xl overflow-hidden relative animate-slideRight">
                @* Doodles decorativos de fondo *@
                <div class="absolute top-0 right-0 p-12 opacity-10">
                    <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-sparkles"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/></svg>
                </div>

                <div class="relative z-10 space-y-10">
                    <h3 class="font-serif text-2xl font-bold mb-6">Información</h3>
                    
                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0 backdrop-blur-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin text-primary-300"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-lg mb-1">Ubicación</h4>
                                <p class="text-sage-200">
                                    Av. Winston Churchill #123<br />
                                    Santo Domingo, República Dominicana
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0 backdrop-blur-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone text-primary-300"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-lg mb-1">Teléfono</h4>
                                <p class="text-sage-200">
                                    <a href="tel:+18095551234" class="hover:text-white transition-colors">(809) 555-1234</a>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0 backdrop-blur-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail text-primary-300"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-lg mb-1">Email</h4>
                                <p class="text-sage-200">
                                    <a href="mailto:info@relaxspa.com" class="hover:text-white transition-colors">info@relaxspa.com</a>
                                </p>
                            </div>
                        </div>

                         <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0 backdrop-blur-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock text-primary-300"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-lg mb-1">Horario</h4>
                                <p class="text-sage-200">
                                    Lun - Vie: 9:00 AM - 7:00 PM<br />
                                    Sábados: 10:00 AM - 6:00 PM
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Formulario *@
            <div class="bg-white rounded-3xl p-10 shadow-sm animate-slideLeft">
                <h3 class="font-serif text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h3>
                
                <form>
                    <div class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Nombre</label>
                                <input type="text" class="w-full rounded-xl border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" placeholder="Tu nombre" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Apellido</label>
                                <input type="text" class="w-full rounded-xl border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" placeholder="Tu apellido" />
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                            <input type="email" class="w-full rounded-xl border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" placeholder="tu@email.com" />
                        </div>

                         <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Mensaje</label>
                            <textarea rows="4" class="w-full rounded-xl border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500" placeholder="¿Cómo podemos ayudarte?"></textarea>
                        </div>

                        <button type="button" class="btn-primary w-full py-3 rounded-xl shadow-lg hover:bg-primary-700 transition-colors">
                            Enviar Mensaje
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

